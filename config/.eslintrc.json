{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "script"
  },
  "rules": {
    "no-console": "off",
    "no-undef": "error",
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 4],
    "no-unused-vars": ["warn"],
    "no-extra-semi": "error"
  },
  "globals": {
    "window": "readonly",
    "document": "readonly"
  }
}
